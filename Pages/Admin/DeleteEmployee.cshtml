@page
@model Fryzjer.Pages.Admin.DeleteEmployeeModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>Are you sure you want to delete this employee?</p>
    <p><strong>@Model.Hairdresser.Name @Model.Hairdresser.surname</strong></p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Page("/Admin/EmployeeManagement")" class="btn btn-secondary">Cancel</a>
</form>
