@page
@model Fryzjer.Pages.Admin.EmployeeManagementModel
@{
    ViewData["Title"] = "Zarządzanie pracownikami";
}
<h2>@ViewData["Title"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Specjalizacje</th>
            <th>Działania</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hairdressers != null && Model.Hairdressers.Any())
        {
            foreach (var hairdresser in Model.Hairdressers)
            {
                <tr>
                    <td>@hairdresser.Name</td>
                    <td>@hairdresser.Surname</td>
                    <td>
                        <a href="@Url.Page("/Admin/Employee/ManageSpecializations", new { hairdresserId = hairdresser.Id })"
                           class="btn btn-primary btn-sm">
                            Zarządzaj specjalizacjami
                        </a>
                    </td>
                    <td>
                        <a href="@Url.Page("/Admin/Employee/EditEmployee", new { id = hairdresser.Id })" class="btn btn-warning btn-sm">Edytuj</a> |
                        <a href="@Url.Page("/Admin/Employee/DetailsEmployee", new { id = hairdresser.Id })" class="btn btn-info btn-sm">Szczegóły</a> |
                        <a href="@Url.Page("/Admin/Employee/DeleteEmployee", new { id = hairdresser.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Na pewno chcesz usunąć tego pracownika?')">Usuń</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">Brak dostępnych pracowników.</td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="@Url.Page("/Admin/Employee/AddEmployee")">Dodaj nowego pracownika</a>