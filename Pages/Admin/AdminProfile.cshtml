@page
@model Fryzjer.Pages.Admin.AdminProfile
@{
    ViewData["Title"] = "Panel Administratora";
}

<div class="admin-container">
    <h1 class="text-center mt-3">Witaj w panelu administracyjnym</h1>
    <p class="text-center text-muted">Zarządzaj wszystkimi funkcjami systemu w jednym miejscu.</p>

    <!-- Sekcja opcji -->
    <div class="card mt-4 shadow">
        <div class="card-header bg-primary text-white text-center">
            <h3>Opcje zarządzania</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Opcje w kolumnach -->
                <div class="col-md-6 mb-3">
                    <form method="post" asp-page-handler="Schedule">
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100 shadow-sm">
                            <i class="fas fa-calendar-alt"></i> Harmonogram
                        </button>
                    </form>
                </div>
                <div class="col-md-6 mb-3">
                    <form method="post" asp-page-handler="Requests">
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100 shadow-sm">
                            <i class="fas fa-file-alt"></i> Wnioski o urlop
                        </button>
                    </form>
                </div>
                <div class="col-md-6 mb-3">
                    <form method="post" asp-page-handler="EmployeeManagement">
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100 shadow-sm">
                            <i class="fas fa-users-cog"></i> Pracownicy
                        </button>
                    </form>
                </div>

                <div class="col-md-6 mb-3">
                    <form method="post" asp-page-handler="Services">
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100 shadow-sm">
                            <i class="fas fa-concierge-bell"></i> Usługi
                        </button>
                    </form>
                </div>
                <div class="col-md-6 mb-3">
                    <form method="post" asp-page-handler="Salon">
                        <button type="submit" class="btn btn-lg btn-outline-primary w-100 shadow-sm">
                            <i class="fas fa-map-marker-alt"></i> Lista lokali
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .admin-container {
        margin: 0 auto;
        max-width: 900px;
    }

    .card {
        border-radius: 15px;
    }

    .btn-outline-primary {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .footer {
        margin-top: 30px;
        background-color: #f8f9fa;
    }

        .footer p {
            margin: 0;
        }
</style>
