@page
@model Fryzjer.Pages.Admin.EmployeeManagementModel
@{
    ViewData["Title"] = "Zarządzanie pracownikami";
}


<h2>@ViewData["Title"]</h2>

<!-- Table for displaying hairdressers -->
<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Działania</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hairdressers != null && Model.Hairdressers.Any())
        {
            foreach (var hairdresser in Model.Hairdressers)
            {
                <tr>
                    <td>@hairdresser.Name</td>
                    <td>@hairdresser.Surname</td>
                    <td>
                        <!-- Actions for Edit, Details, and Delete -->
                        <a href="@Url.Page("/Admin/EditEmployee", new { id = hairdresser.Id })" class="btn btn-warning btn-sm">Edytuj</a> |
                        <a href="@Url.Page("/Admin/DetailsEmployee", new { id = hairdresser.Id })" class="btn btn-info btn-sm">Szczegóły</a> |
                        <a href="@Url.Page("/Admin/DeleteEmployee", new { id = hairdresser.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Na pewno chcesz usunąć tego pracownika?')">Usuń</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Brak dostępnych pracowników.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Button for adding new hairdresser -->
<a class="btn btn-primary" href="@Url.Page("/Admin/AddEmployee")">Dodaj nowego pracownika</a>
