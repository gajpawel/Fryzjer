@page
@model IndexModel

@{
    ViewData["Title"] = "Client Index";
}

<h1>Zarejestrowani klienci</h1>

<p>
    <a asp-page="/Admin/Clients/Create">Utwórz nowe konto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="/Admin/Clients/Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a asp-page="/Admin/Clients/Details" asp-route-id="@item.Id">Szczegóły</a> |
                <a asp-page="/Admin/Clients/Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
