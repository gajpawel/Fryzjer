@page
@model Fryzjer.Pages.EditSalonModel
@{
    ViewData["Title"] = "Edytuj lokal";
}

<h2>Edytuj lokal</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Place.Id" />

    <div class="form-group">
        <label for="Name">Nazwa lokalu</label>
        <input asp-for="Place.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Address">Adres</label>
        <input asp-for="Place.address" class="form-control" />
    </div>

    <div class="form-group">
        <label for="TelephoneNumber">Numer telefonu</label>
        <input asp-for="Place.telephoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label for="LogoFile">Nowe logo lokalu</label>
        <input type="file" asp-for="LogoFile" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.Place.logoPath))
    {
        <div class="form-group">
            <label>Aktualne logo</label>
            <br />
            <img src="@Model.Place.logoPath" alt="Logo" width="150" height="150" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>
