@page "{id:int}"
@model Fryzjer.Pages.Admin.EditSalonModel

@{
    ViewData["Title"] = "Edytuj salon";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Place.Id" />

    <div class="form-group">
        <label for="Name">Nazwa salonu</label>
        <input asp-for="Place.Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Address">Adres</label>
        <input asp-for="Place.address" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="TelephoneNumber">Numer telefonu</label>
        <input asp-for="Place.telephoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-page="Salon" class="btn btn-secondary">Anuluj</a>
</form>
