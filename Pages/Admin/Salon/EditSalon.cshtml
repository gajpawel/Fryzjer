@page
@model Fryzjer.Pages.Admin.EditSalonModel

@{
    ViewData["Title"] = "Edytuj Salon";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Nazwa Salonu</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Address">Adres</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="TelephoneNumber">Numer Telefonu</label>
        <input asp-for="TelephoneNumber" class="form-control" />
        <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LogoFile">Zmień Logo (opcjonalnie)</label>
        <input type="file" asp-for="LogoFile" class="form-control" />
    </div>
    <div class="form-group">
        <label for="PhotoFile">Zmień Zdjęcie Lokalu (opcjonalnie)</label>
        <input type="file" asp-for="PhotoFile" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Opis Lokalu</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-page="Salon" class="btn btn-secondary">Anuluj</a>
</form>
