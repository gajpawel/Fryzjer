@page
@model Fryzjer.Pages.Admin.SalonModel

@{
    ViewData["Title"] = "Lista lokali";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="AddSalon" class="btn btn-primary">Dodaj nowy lokal</a>
</p>

@if (Model.Places == null || !Model.Places.Any())
{
    <p>Brak danych do wyświetlenia.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa lokalu</th>
                <th>Adres</th>
                <th>Numer telefonu</th>
                <th>Logo</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Places)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.address</td>
                    <td>@item.telephoneNumber</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.logoPath))
                        {
                            <img src="@item.logoPath" alt="Logo" width="100" height="100" />
                        }
                        else
                        {
                            <span>Brak loga</span>
                        }
                    </td>
                    <td>
                        <a asp-page="EditSalon" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                        <a asp-page="DeleteSalon" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
