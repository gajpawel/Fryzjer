@page
@model Fryzjer.Pages.Admin.DeleteSalonModel

@{
    ViewData["Title"] = "Usuń Salon";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">Nazwa Salonu</label>
        <input type="text" class="form-control" value="@Model.Name" readonly />
    </div>

    <div class="form-group">
        <label for="Address">Adres</label>
        <input type="text" class="form-control" value="@Model.Address" readonly />
    </div>

    <div class="form-group">
        <label for="TelephoneNumber">Numer Telefonu</label>
        <input type="text" class="form-control" value="@Model.TelephoneNumber" readonly />
    </div>

    <div class="form-group">
        <label for="Description">Opis</label>
        <textarea class="form-control" readonly>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label>Logo</label><br />
        @if (!string.IsNullOrEmpty(Model.LogoPath))
        {
            <img src="@Model.LogoPath" alt="Logo Salonu" style="max-height: 100px;" />
        }
        else
        {
            <span>Brak logo</span>
        }
    </div>

    <div class="form-group">
        <label>Zdjęcie Lokalu</label><br />
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img src="@Model.PhotoPath" alt="Zdjęcie Lokalu" style="max-height: 100px;" />
        }
        else
        {
            <span>Brak zdjęcia</span>
        }
    </div>

    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-page="Salon" class="btn btn-secondary">Anuluj</a>
</form>
