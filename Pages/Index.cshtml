@page
@model Fryzjer.Pages.IndexModel
@inject IWebHostEnvironment Environment
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Zarezerwuj wizytę w salonie fryzjerskim.</h1>
</div>
<div class="container" style="margin-top: 20px">
    <hr class="my-12" />
    <div class="row">
        @foreach (var item in Model.Place)
        {
            <div class="col-12 col-lg-6" style="margin-top: 15px">
                <a href="@Url.Page("/ViewSalon", new { id = item.Id })" class="invisible_link">
                    <div class="p-3 border hover_div" >
                        <div class="row">
                            <div class="col-3">
                            @if (Model.IsFileAvailable(item.logoPath))
                            {
                                <img src="@item.logoPath" alt="Logo Salonu" class="rounded img-thumbnail">
                            }
                            else
                            {
                                <img src="~/images/default_logo.jpg" alt="Domyślne Logo" class="rounded img-thumbnail">
                            }
                            </div>
                            <div class="row col-9">
                                <div class="row">
                                    <h4>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </h4>
                                </div>
                                <div class="row">
                                    <p>
                                        @Html.DisplayFor(modelItem => item.address)
                                        <br>
                                        @Html.DisplayFor(modelItem => item.telephoneNumber)
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
   
