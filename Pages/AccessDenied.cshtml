@page
@model Fryzjer.Pages.AccessDeniedModel
@{
    ViewData["Title"] = "Brak Dostępu";
}
<html>
    <head>
        <style>
            .gif-image {
              height: 400px; 
              max-width: 100%; 
              object-fit: cover; 
            }
        </style>
    </head>
    <body>
        <div class="d-flex flex-column justify-content-center align-items-center vh-100 text-center">
            <div>
                <h2>@ViewData["Title"]</h2>
                <br />
                <p>Nie masz dostępu do tego elementu strony.</p>
                <p>Jeśli uważasz że to błąd, skontaktuj się z administratorem.</p>
                <br />
                <p><b>Gif na pocieszenie</b></p>
            </div>

            <div class="d-flex justify-content-center align-items-center mt-2 w-100">
                @switch (Model.GetRandom())
                {
                    case (1):
                    <img src="https://media1.tenor.com/m/SSO1G6rWn4IAAAAd/i-cant-fucking-take-it.gif" alt="Gif 1" class="gif-image"/>
                        break;
                    case (2):
                    <img src="https://gifdb.com/images/high/lizard-licking-orange-vp1exkpjga2a80zj.webp" alt="Gif 2" class="gif-image" />
                        break;
                    case (3):
                    <img src="https://i.imgur.com/AWrq3NE.gif" alt="Gif 3" class="gif-image" />
                        break;
                    case (4):
                    <img src="https://media1.tenor.com/m/jVoAmDJNEMMAAAAd/fish-going-to-eat.gif" alt="Gif 4" class="gif-image" />
                        break;
                    default:
                    <img src="https://media1.tenor.com/m/2oNzW1RDE-IAAAAd/let-me-make-myself-very-clear-let.gif" alt="Gif 5" class="gif-image"/>
                        break;

                }
            </div>
        </div>
    </body>
          
</html>